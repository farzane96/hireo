	$('#password-register').focus(() => {
		$('#password-register-icon').removeClass('error-border');
		$('#password-register').removeClass('error-border');
		$('#password-repeat-register-icon').removeClass('error-border');
		$('#password-repeat-register').removeClass('error-border');
	});

	$('#password-repeat-register').focus(() => {
		$('#password-register-icon').removeClass('error-border');
		$('#password-register').removeClass('error-border');
		$('#password-repeat-register-icon').removeClass('error-border');
		$('#password-repeat-register').removeClass('error-border');
	});

	$('#emailaddress-register').focus(() => {
		$('#emailaddress-register').removeClass('error-border');
		$('#emailaddress-register-icon').removeClass('error-border');
	});

	$('#register-submit').on('click', () => {
		const isFreelancer = $('#freelancer-radio').is(':checked');
		const isEmployer = $('#employer-radio').is(':checked');
		const email = $('#emailaddress-register').val();
		const password = $('#password-register').val();
		const passwordConfirm = $('#password-repeat-register').val();
		if (password !== passwordConfirm) {
			$('#password-register').val('');
			$('#password-register').attr('placeholder', 'Passwords Do Not Match');
			$('#password-register').addClass('error-border');
			$('#password-register-icon').addClass('error-border');
			$('#password-repeat-register').addClass('error-border');
			$('#password-repeat-register-icon').addClass('error-border');
			$('#password-repeat-register').val('');
		} else {
			$.ajax({
				url: '/register',
				method: 'POST',
				contentType: 'application/json',
				data: JSON.stringify({ email, password, isFreelancer, isEmployer }),
				success: (result, statusCode, xhr) => {
					window.location.replace('dashboard');
				},
				error: (xhr, statusCode, error) => {
					$('#emailaddress-register').val('');
					$('#password-register').val('');
					$('#password-repeat-register').val('');
					$('#emailaddress-register').attr('placeholder', 'Email Already Taken');
					$('#emailaddress-register').addClass('error-border');
					$('#emailaddress-register-icon').addClass('error-border');
				},
			});
		}
	});
	$('#login-submit').on('click', () => {
		const email = $('#emailaddress').val();
		const password = $('#password').val();
		$.ajax({
			url: '/login',
			method: 'POST',
			contentType: 'application/json',
			data: JSON.stringify({ email, password }),
			success: (result, statusCode, xhr) => {
				location.href = '/dashboard';
			},
			error: (xhr, statusCode, error) => {
				$('#emailaddress').val('');
				$('#password').val('');
				$('#emailaddress').attr('placeholder', 'Invalid Email');
				$('#emailaddress').css('border', 'solid 1px #dc3545');
				$('#emailaddress-icon').css('border', 'solid 1px #dc3545');
			}
		});
	});

	$('#logOut').on('click', () => {
		$.ajax({
			url: '/logout',
			method: 'GET',
			success: (data, status, xhr) => {
				window.location.href = '/';
			}
		});
	});
</script>
