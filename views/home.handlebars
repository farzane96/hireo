<!-- Sign In Popup
================================================== -->
<div id="sign-in-dialog" class="zoom-anim-dialog mfp-hide dialog-with-tabs">

	<!--Tabs -->
	<div class="sign-in-form">
		<ul class="popup-tabs-nav">
			<li><a href="#login">ورود</a></li>
			<li><a href="#register" id="register-btn-2">ثبت نام</a></li>
		</ul>
		<div class="popup-tabs-container">
			<!-- Login -->
			<div class="popup-tab-content" id="login">
				<!-- Welcome Text -->
				<div class="welcome-text">
					<h3 style="font-family: Mahsa;">به سایت ما خوش آمدید</h3>
					<span>قبلا ثبت نام نکرده اید؟<a href="#" class="register-tab"> ثبت نام</a></span>
				</div>
				<!-- Form -->
				<div id="login-form">
					<div class="input-with-icon-left">
						<i class="icon-material-baseline-mail-outline" id="emailaddress-icon"></i>
						<input style="font-family: Mahsa; text-align: right;" type="email" class="input-text with-border" name="emailaddress" id="emailaddress" placeholder="آدرس ایمیل" required/>
					</div>
					<div class="input-with-icon-left">
						<i class="icon-material-outline-lock"></i>
						<input style="font-family: Mahsa; text-align: right;" type="password" class="input-text with-border" name="password" id="password" placeholder="رمز ورود" required/>
					</div>
					<a style="font-family: Mahsa; position: absolute; right: 40px;" href="#" class="forgot-password">رمز عبور خود را فراموش کرده اید؟</a>
				</div>
				<!-- Button -->
				<button style="margin-top: 50px; font-family: Mahsa;" id="login-submit"class="button full-width button-sliding-icon ripple-effect" type="submit" form="login-form">ورود
					<i class="icon-material-outline-arrow-right-alt"></i>
				</button>
			</div>
			<!-- Register -->
			<div class="popup-tab-content" id="register">
				<!-- Welcome Text -->
				<div class="welcome-text">
					<h3 style="font-family: Mahsa;">ساخت اکانت</h3>
				</div>
				<!-- Account Type -->
				<div class="account-type">
					<div>
						<input type="radio" name="account-type-radio" id="freelancer-radio" class="account-type-radio" checked/>
						<label for="freelancer-radio" class="ripple-effect-dark"><i class="icon-material-outline-account-circle"></i> فریلنسر</label>
					</div>
					<div>
						<input type="radio" name="account-type-radio" id="employer-radio" class="account-type-radio"/>
						<label for="employer-radio" class="ripple-effect-dark"><i class="icon-material-outline-business-center"></i> کارفرما</label>
					</div>
				</div>
				<!-- Form -->
				<div id="register-account-form">
