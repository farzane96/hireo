<!-- Snackbar // documentation: https://www.polonel.com/snackbar/ -->
<script>
// Snackbar for user status switcher
$('#snackbar-user-status label').click(function() { 
	Snackbar.show({
		text: 'Your status has been changed!',
		pos: 'bottom-center',
		showAction: false,
		actionText: "Dismiss",
		duration: 3000,
		textColor: '#fff',
		backgroundColor: '#383838'
	}); 
}); 
</script>
	
<script>
	$('#save-changes').on('click', () => {
		const minimal_rate = $('#biddingVal').text();
		const delivery_time = $('#delivery-time').val();
		const type = $('#type option:selected').text();
		const task_id = $('#task-id').text();
		console.log(minimal_rate, delivery_time, type, task_id);
		$.ajax({
			url: '/tasks/edit_bids',
			method: 'POST',
			contentType: 'application/json',
			data: JSON.stringify({
				minimal_rate,
				delivery_time,
				type,
				task_id,
			}),

			success: (data, status, xhr) => {
				window.location.href = '/tasks/my_bids';
			},
		});
	});

	$('#logOut').on('click', () => {
		$.ajax({
			url: '/logout',
			method: 'GET',
			success: (data, status, xhr) => {
				window.location.href = '/';
			}
		});
	});
</script>

