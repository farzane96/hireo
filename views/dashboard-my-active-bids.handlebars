<!-- Dashboard Container -->
<div class="dashboard-container">

	<!-- Dashboard Sidebar
	================================================== -->
	<div class="dashboard-sidebar">
		<div class="dashboard-sidebar-inner" data-simplebar>
			<div class="dashboard-nav-container">

				<!-- Responsive Navigation Trigger -->
				<a href="#" class="dashboard-responsive-nav-trigger">
					<span class="hamburger hamburger--collapse" >
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
					</span>
					<span class="trigger-title">Dashboard Navigation</span>
				</a>
				
				<!-- Navigation -->
				<div class="dashboard-nav">
					<div class="dashboard-nav-inner">

						<ul data-submenu-title="شروع">
							<li><a href="/dashboard"><i class="icon-material-outline-dashboard"></i> داشبورد</a></li>
							<li><a href="/reviews/my_reviews"><i class="icon-material-outline-rate-review"></i> نظرات</a></li>
						</ul>
						
						{{#equal data.user.role 'employer'}}
						<ul data-submenu-title="سازمان دادن و اداره کردن">
							<li><a href="#"><i class="icon-material-outline-business-center"></i> شغل‌ها</a>
								<ul>
									<li><a href="/jobs/my_jobs">مدیریت شغل‌ها <span class="nav-tag">{{data.user.jobs.length}}</span></a></li>
									<li><a href="/jobs/create">پست موقعیت شغلی</a></li>
								</ul>	
							</li>
							<li><a href="#"><i class="icon-material-outline-assignment"></i> پروژه‌ها</a>
								<ul>
									<li><a href="/tasks/my_tasks">مدیریت پروژه‌ها <span class="nav-tag">{{data.user.tasks.length}}</span></a></li>
									<li><a href="/tasks/create">ساخت پروژه</a></li>
								</ul>	
							</li>
						</ul>
						{{/equal}}

						{{#equal data.user.role 'freelancer'}}
						<ul data-submenu-title="سازمان دادن و اداره کردن">
							<li class="active-submenu"><a href="#"><i class="icon-material-outline-assignment"></i> پروژه‌ها</a>
								<ul>
									<li><a href="/tasks/my_tasks">مدیریت پروژه‌ها<span class="nav-tag">{{data.user.tasks.length}}</span></a></li>
									<li><a href="/tasks/my_bids">پیشنهادهای من </a></li>
								</ul>	
							</li>
						</ul>
						{{/equal}}

						<ul data-submenu-title="اکانت">
							<li><a href="/dashboard_settings"><i class="icon-material-outline-settings"></i> تنظیمات</a></li>
							<li><a href="/logout" id="logOut"><i class="icon-material-outline-power-settings-new"></i> خروج</a></li>
						</ul>
						
					</div>
				</div>
				<!-- Navigation / End -->

			</div>
		</div>
	</div>
	<!-- Dashboard Sidebar / End -->


	<!-- Dashboard Content
	================================================== -->
	<div class="dashboard-content-container" data-simplebar>
		<div class="dashboard-content-inner" >
			
			<!-- Dashboard Headline -->
			<div class="dashboard-headline">
				<h3>پیشنهادهای من</h3>

				<!-- Breadcrumbs -->
				{{!-- <nav id="breadcrumbs" class="dark">
					<ul>
						<li><a href="#">Home</a></li>
						<li><a href="#">Dashboard</a></li>
						<li>My Active Bids</li>
					</ul>
				</nav> --}}
			</div>
	
			<!-- Row -->
			<div class="row">

				<!-- Dashboard Box -->
				<div class="col-xl-12">
					<div class="dashboard-box margin-top-0">

						<!-- Headline -->
						<div class="headline">
							<h3><i class="icon-material-outline-gavel"></i> لیست پیشنهادها</h3>
						</div>

						<div class="content">
							<ul class="dashboard-box-list">
								{{#each data.bids}}
								<li>
									<!-- Job Listing -->
									<div class="job-listing width-adjustment">

										<!-- Job Listing Details -->
										<div class="job-listing-details">

											<!-- Details -->
											<div class="job-listing-description">
												<h3 class="job-listing-title"><a href="#">{{this.task_id.name}}</a></h3>
											</div>
										</div>
									</div>
									
									<!-- Task Details -->
									<ul class="dashboard-task-info">
										<li><strong>{{this.minimal_rate}}</strong><span>{{this.task_id.budget_type}} </span></li>
										<li><strong>{{this.delivery_time.quantity}} {{this.delivery_time.type}}</strong><span>مدت زمان تحویل</span></li>
									</ul>

									<!-- Buttons -->
									<div class="buttons-to-right always-visible">
										<a href="#small-dialog" class="popup-with-zoom-anim button dark ripple-effect ico" title="Edit Bid" data-tippy-placement="top"><i class="icon-feather-edit"></i></a>
										<a href="#" class="button red ripple-effect ico" title="Cancel Bid" data-tippy-placement="top"><i class="icon-feather-trash-2"></i></a>
									</div>
								</li>

								<!-- Edit Bid Popup
								================================================== -->
								<div id="small-dialog" class="zoom-anim-dialog mfp-hide dialog-with-tabs">

									<!--Tabs -->
									<div class="sign-in-form">

										<ul class="popup-tabs-nav">
											<li><a href="#tab">ویرایش پیشنهاد</a></li>
										</ul>

										<div class="popup-tabs-container">

											<!-- Tab -->
											<div class="popup-tab-content" id="tab">
														
												<!-- Bidding -->
												<div class="bidding-widget">
													<!-- Headline -->
													<span class="bidding-detail">حداقل نرخ پیشنهادی خود را وارد کنید</strong></span>

													<!-- Price Slider -->
													<div class="bidding-value"><span id="biddingVal"></span></div>
													<input class="bidding-slider" type="text" value="" data-slider-handle="custom" data-slider-currency="$" data-slider-min="{{this.task_id.min_budget}}" data-slider-max="{{this.task_id.max_budget}}" data-slider-value="{{this.minimal_rate}}" data-slider-step="1" data-slider-tooltip="hide" />
													
													<!-- Headline -->
													<span class="bidding-detail margin-top-30">مدت زمان تحویل دادن</strong></span>

													<!-- Fields -->
													<div class="bidding-fields">
														<div class="bidding-field">
															<!-- Quantity Buttons -->
															<div class="qtyButtons with-border">
																<div class="qtyDec"></div>
																<input type="text" name="qtyInput"  id="delivery-time" value="{{this.delivery_time.quantity}}">
																<div class="qtyInc"></div>
															</div>
														</div>
														<div class="bidding-field">
															<select id="type" class="selectpicker default with-border">
																{{#equal this.delivery_time.type 1}}
																<option>Days</option>
																<option selected>Hours</option>
																{{/equal}}
																{{#equal this.delivery_time.type 0}}
																<option selected>Days</option>
																<option>Hours</option>
																{{/equal}}
															</select>
														</div>
													</div>
												</div>
												
												<!-- Button -->
												<button class="button full-width button-sliding-icon ripple-effect" type="submit" id="save-changes">ذخیره تغییرات <i class="icon-material-outline-arrow-right-alt"></i></button>

											</div>

										</div>
									</div>
								</div>
								<!-- Edit Bid Popup / End -->
								<p  id="task-id" style="display: none;">{{this.task_id._id}}</p>
								{{/each}}
							</ul>
						</div>
					</div>
				</div>

			</div>
			<!-- Row / End -->

			<!-- Footer -->
			<div class="dashboard-footer-spacer"></div>
			<div class="small-footer margin-top-15">
				<div class="small-footer-copyrights">
					© 2019 <strong>Hireo</strong>. All Rights Reserved.
				</div>
