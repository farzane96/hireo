				<!-- Category -->
				<div class="sidebar-widget">
					<h3>Category</h3>
					<select id="category" class="selectpicker" data-selected-text-format="count" data-size="7" title="All Categories">
						{{#each data.categories}}
						<option value="{{this._id}}">{{this.title}}</option>
						{{/each}}
					</select>
				</div>
				
				<!-- Tags -->
				<div class="sidebar-widget">
					
					<button class="button ripple-effect full-width" id="submit">Submit</button>
					
				</div>

				<div class="sidebar-widget">
					
					<button class="button ripple-effect full-width" style="background-color: #303030;" id="clear">Clear Filters</button>
					<div class="clearfix"></div>

				</div>

			</div>
		</div>
		<div class="col-xl-9 col-lg-8 content-left-offset">

			<div class="listings-container compact-list-layout margin-top-35">
				
				<!-- Job Listing -->
				{{#each data.jobs}}
				<a href="/jobs/{{this._id}}" class="job-listing">

					<!-- Job Listing Details -->
					<div class="job-listing-details">

						<!-- Logo -->
						<div class="job-listing-company-logo">
							<img src="{{this.posted_by.logo}}" alt="">
						</div>

						<!-- Details -->
						<div class="job-listing-description">
							<h3 class="job-listing-title">{{this.title}}</h3>

							<!-- Job Listing Footer -->
							<div class="job-listing-footer">
								<ul>
									<li><i class="icon-material-outline-business"></i> {{this.posted_by.name}} </li>
									<li><i class="icon-material-outline-location-on"></i> {{this.location}}</li>
									<li><i class="icon-material-outline-business-center"></i> {{this.type}}</li>
									<li><i class="icon-material-outline-access-time"></i> {{this.created_at}}</li>
								</ul>
							</div>
						</div>

					</div>
				</a>	
				{{/each}}

				
			</div>


			<!-- Pagination -->
			<div class="clearfix"></div>
			<div class="row">
				<div class="col-md-12">
					<!-- Pagination -->
					<div class="pagination-container margin-top-60 margin-bottom-60">
						<nav class="pagination">
							<ul class="page-no">
