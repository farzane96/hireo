<!-- Google Autocomplete -->
<script>
	function initAutocomplete() {
		 var options = {
		  types: ['(cities)'],
		  // componentRestrictions: {country: "us"}
		 };

		 var input = document.getElementById('autocomplete-input');
		 var autocomplete = new google.maps.places.Autocomplete(input, options);
	}
</script>

<script>
	$(document).ready(() => {
		$('#logOut').on('click', () => {
			$.ajax({
				url: '/logout',
				method: 'GET',
				success: (data, status, xhr) => {
					window.location.href = '/';
				}
			});
		});

		$('.task-listing-text').each((index, element) => {
			if ($(element).text().length > 200) {
				$(element).text($(element).text().slice(0, 200) + '...');
			}
		});

		$('.page-no li a').each((index, element) => {
			if ($(element).text() == location.href.split('page=')[1]) {
				$(element).addClass('current-page');
			} else if (index == 0 && location.href.split('page=').length <= 1) {
				$(element).addClass('current-page');
			}
		});

		$('#submit-filter').on('click', () => {
			const location = $('#autocomplete-input').val();
			const category = $('#categories option:selected').attr('value');
			const title = $('#search-title').val();
			let url = '/tasks?req=1';
			location ? url = url + '&location=' + location : '';
			category ? url = url + '&category=' + category : '';
			title ? url = url + '&title=' + title : '';
			window.location.href = url;
		});

		$('#clear').on('click', () => {
			window.location.href = '/tasks';
		});

		if (location.href.split('location=').length > 1) {
			let lc;
			if (location.href.split('location=')[1].split('&').length > 1) {
				lc = location.href.split('location=')[1].split('&')[0];
			} else {
				lc = location.href.split('location=')[1];
			}
			$('#autocomplete-input').val(lc.replace('%20', ' '));
		}

		if (location.href.split('title=').length > 1) {
			let lc;
			if (location.href.split('title=')[1].split('&').length > 1) {
				lc = location.href.split('title=')[1].split('&')[0];
			} else {
				lc = location.href.split('title=')[1];
			}
			$('#search-title').val(lc);
		}

		if (location.href.split('category=').length > 1) {
			let lc;
			if (location.href.split('category=')[1].split('&').length > 1) {
				lc = location.href.split('category=')[1].split('&')[0];
			} else {
				lc = location.href.split('category=')[1];
			}
			$('#categories option').each((index, element) => {
				if ($(element).attr('value') == lc) {
					$(element).attr('selected', 'selected');
				}
			});
		}
	});
	
</script>

