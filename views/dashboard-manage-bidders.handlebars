<script>
// Snackbar for user status switcher
$('#snackbar-user-status label').click(function() { 
	Snackbar.show({
		text: 'Your status has been changed!',
		pos: 'bottom-center',
		showAction: false,
		actionText: "Dismiss",
		duration: 3000,
		textColor: '#fff',
		backgroundColor: '#383838'
	}); 
}); 

$('#logOut').on('click', () => {
	$.ajax({
		url: '/logout',
		method: 'GET',
		success: (data, status, xhr) => {
			window.location.href = '/';
		}
	});
});

$('#accept').on('click', () => {
    window.location.href = $('#accept').href();
});
</script>

