<!-- Header Container / End -->


<!-- Dashboard Container -->
<div class="dashboard-container">

	<!-- Dashboard Sidebar
	================================================== -->
	<div class="dashboard-sidebar">
		<div class="dashboard-sidebar-inner" data-simplebar>
			<div class="dashboard-nav-container">

				<!-- Responsive Navigation Trigger -->
				<a href="#" class="dashboard-responsive-nav-trigger">
					<span class="hamburger hamburger--collapse" >
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
					</span>
					<span class="trigger-title">Dashboard Navigation</span>
				</a>
				
				<!-- Navigation -->
				<div class="dashboard-nav">
					<div class="dashboard-nav-inner">

						<ul data-submenu-title="شروع">
							<li><a href="/dashboard"><i class="icon-material-outline-dashboard"></i> داشبورد</a></li>
							<li><a href="/reviews/my_reviews"><i class="icon-material-outline-rate-review"></i> بازدید</a></li>
						</ul>
						
						{{#equal data.user.role 'employer'}}
						<ul data-submenu-title="سازمان دادن و اداره کردن">
							<li><a href="#"><i class="icon-material-outline-business-center"></i> شغل‌ها</a>
								<ul>
									<li><a href="/jobs/my_jobs">مدیریت شغل‌ها <span class="nav-tag">{{data.user.jobs.length}}</span></a></li>
									<li><a href="/jobs/create">پست موقعیت شغلی</a></li>
								</ul>	
							</li>
							<li class="active-submenu"><a href="#"><i class="icon-material-outline-assignment"></i> پروژه‌ها</a>
								<ul>
									<li><a href="/tasks/my_tasks">مدیریت پروژه‌ها <span class="nav-tag">{{data.user.tasks.length}}</span></a></li>
									<li><a href="/tasks/create">ساخت پروژه</a></li>
								</ul>	
							</li>
						</ul>
						{{/equal}}

						{{#equal data.user.role 'freelancer'}}
						<ul data-submenu-title="سازمان دادن و اداره کردن">
							<li><a href="#"><i class="icon-material-outline-assignment"></i> پروژه‌ها</a>
								<ul>
									<li><a href="/tasks/my_tasks">مدیریت پروژه‌ها <span class="nav-tag">{{data.user.tasks.length}}</span></a></li>
									<li><a href="/tasks/my_bids">پیشنهادهای من </a></li>
								</ul>	
							</li>
						</ul>
						{{/equal}}

						<ul data-submenu-title="اکانت">
							<li><a href="/dashboard_settings"><i class="icon-material-outline-settings"></i> تنظیمات</a></li>
							<li><a href="/" id="logOut"><i class="icon-material-outline-power-settings-new"></i> خروج</a></li>
						</ul>
						
					</div>
				</div>
				<!-- Navigation / End -->

			</div>
		</div>
	</div>
	<!-- Dashboard Sidebar / End -->


	<!-- Dashboard Content
	================================================== -->
	<div class="dashboard-content-container" style="text-align: right;" data-simplebar>
		<div class="dashboard-content-inner" >
			
			<!-- Dashboard Headline -->
			<div style="text-align: right;" class="dashboard-headline">
				<h3>مدیریت پیشنهادها</h3>
				<span class="margin-top-7">پیشنهادهای <a href="/tasks/{{ data.task._id }}">{{data.task.name}}</a></span>
			</div>
	
			<!-- Row -->
			<div class="row">

				<!-- Dashboard Box -->
				<div class="col-xl-12">
					<div class="dashboard-box margin-top-0">

						<!-- Headline -->
						<div class="headline">
							<h3> پیشنهاد {{data.bids.length}} <i class="icon-material-outline-supervisor-account"></i></h3>
						</div>

						<div class="content">
							<ul class="dashboard-box-list">
								{{#each data.bids}}
								<li>
									<!-- Overview -->
									<div class="freelancer-overview manage-candidates">
										<div class="freelancer-overview-inner">

											<!-- Avatar -->
											{{!-- <div class="freelancer-avatar">
												<div class="verified-badge"></div>
												<a href="#"><img src="{{this.freelancer_id.profile_picture}}" alt=""></a>
											</div> --}}

											<!-- Name -->
											<div class="freelancer-name">
												<h4 style="text-align: right;"><a href="/freelancers/{{ this.freelancer_id._id }}" id="bidder-fullname">{{this.freelancer_id.first_name}} {{this.freelancer_id.last_name}} </a></h4>

												<!-- Details -->
												<span style="position: absolute; right: 20px;" class="freelancer-detail-item"><a><i class="icon-feather-mail"></i> <span class="__cf_email__" data-cfemail="0d696c7b64694d68756c607d6168236e6260">{{ this.freelancer_id.email }}</span></a></span>

												<!-- Rating -->
												<div class="freelancer-rating" style="position: absolute; right: 20px; top: 100px;">
													<div class="star-rating" data-rating="{{this.freelancer_id.rate}}"></div>
												</div>

												<!-- Bid Details -->
												<ul class="dashboard-task-info bid-info" style="position: absolute; left: 30px; width: 180px;">
													<li><strong>{{this.minimal_rate}}</strong><span>قیمت</span></li>
													<li><strong>{{this.delivery_time.quantity}}</strong><span>{{this.delivery_time.type}}</span></li>
												</ul>

												<!-- Buttons -->
												<div class="buttons-to-right always-visible" style="text-align: right; margin-top: 100px;">
													<a href="/tasks/{{ this.task_id }}/bids/{{ this._id }}/apply"  class="popup-with-zoom-anim button ripple-effect" id="accept"><i class="icon-material-outline-check"></i> پذیرفتن پیشنهاد</a>
													<a href="#" class="button gray ripple-effect ico" title="Remove Bid" data-tippy-placement="top"><i class="icon-feather-trash-2"></i></a>
												</div>
											</div>
										</div>
									</div>
								</li>
								{{/each}}
							</ul>
						</div>
					</div>
				</div>

			</div>
			<!-- Row / End -->

			<!-- Footer -->
			<div class="dashboard-footer-spacer"></div>
			<div class="small-footer margin-top-15">
				<div class="small-footer-copyrights">
					© 2020 <strong>Hireo</strong>. All Rights Reserved.
				</div>
				<ul class="footer-social-links">
					<li>
						<a href="#" title="Facebook" data-tippy-placement="top">
							<i class="icon-brand-facebook-f"></i>
						</a>
					</li>
					<li>
						<a href="#" title="Twitter" data-tippy-placement="top">
							<i class="icon-brand-twitter"></i>
						</a>
					</li>
					<li>
						<a href="#" title="Google Plus" data-tippy-placement="top">
							<i class="icon-brand-google-plus-g"></i>
						</a>
					</li>
					<li>
						<a href="#" title="LinkedIn" data-tippy-placement="top">
							<i class="icon-brand-linkedin-in"></i>
						</a>
					</li>
				</ul>
				<div class="clearfix"></div>
			</div>
			<!-- Footer / End -->

		</div>
	</div>
	<!-- Dashboard Content / End -->

</div>
<!-- Dashboard Container / End -->

</div>
<!-- Wrapper / End -->

<h1 style="display: none;" id="bidder-fullname-hidden"></h1>
<!-- Bid Acceptance Popup
================================================== -->
<div id="small-dialog-1" class="zoom-anim-dialog mfp-hide dialog-with-tabs">

	<!--Tabs -->
	<div class="sign-in-form">

		<ul class="popup-tabs-nav">
			<li><a href="#tab1">پذیرفتن پیشنهاد</a></li>
		</ul>

		<div class="popup-tabs-container">

			<!-- Tab -->
			<div class="popup-tab-content" id="tab">
				
				<!-- Welcome Text -->
				<div class="welcome-text">
					<h3 id="bidder-fullname-accept">مبلغ</h3>
					<div class="bid-acceptance margin-top-15">
						$3200
					</div>

				</div>

				<form id="terms">
					<div class="radio">
						<input id="radio-1" name="radio" type="radio" required>
						<label for="radio-1"><span class="radio-label"></span>  I have read and agree to the Terms and Conditions</label>
					</div>
				</form>

				<!-- Button -->
				<button class="margin-top-15 button full-width button-sliding-icon ripple-effect" type="submit" form="terms">Accept <i class="icon-material-outline-arrow-right-alt"></i></button>

			</div>

		</div>
	</div>
</div>
<!-- Bid Acceptance Popup / End -->


<!-- Send Direct Message Popup
================================================== -->
<div id="small-dialog-2" class="zoom-anim-dialog mfp-hide dialog-with-tabs">

	<!--Tabs -->
	<div class="sign-in-form">

		<ul class="popup-tabs-nav">
			<li><a href="#tab2">Send Message</a></li>
		</ul>

		<div class="popup-tabs-container">

			<!-- Tab -->
			<div class="popup-tab-content" id="tab2">
				
				<!-- Welcome Text -->
				<div class="welcome-text">
					<h3>Direct Message To David</h3>
				</div>
					
				<!-- Form -->
				<form method="post" id="send-pm">
					<textarea name="textarea" cols="10" placeholder="Message" class="with-border" required></textarea>
				</form>
				
				<!-- Button -->
				<button class="button full-width button-sliding-icon ripple-effect" type="submit" form="send-pm">Send <i class="icon-material-outline-arrow-right-alt"></i></button>

			</div>

		</div>
	</div>
</div>
