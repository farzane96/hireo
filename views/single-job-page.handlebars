<!doctype html>
<html lang="en">
<head>
	<title>Hireo</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link rel="stylesheet" href="/css/style.css">
	<link rel="stylesheet" href="/css/colors/blue.css">
</head>
<body>

<!-- Wrapper -->
<div id="wrapper">

<!-- Header Container
================================================== -->
<header id="header-container" class="fullwidth">

	<!-- Header -->
	<div id="header">
		<div class="container">
			
			<!-- Left Side Content -->
			<div class="left-side">
				
				<!-- Logo -->
				<div id="logo">
					<a href="/"><img src="/images/logo.png" alt=""></a>
				</div>

				<!-- Main Navigation -->
				<nav id="navigation">
					<ul id="responsive">

						<li><a href="/">خانه</a></li>

						<li><a href="#">فرصت‌های کاری</a>
							<ul class="dropdown-nav">
								<li><a href="/jobs">شغل‌ها</a>
								</li>
								<li><a href="/tasks">پروژه‌ها</a>
									
								</li>
							</ul>
						</li>

						<li><a href="/companies">شرکت‌ها</a></li>

						<li><a href="/freelancers">فریلنسرها</a></li>
					</ul>
				</nav>
				<div class="clearfix"></div>
				<!-- Main Navigation / End -->
				
			</div>
			<!-- Left Side Content / End -->


			<!-- Right Side Content / End -->
			<div class="right-side">
				{{#if data.user}}
				{{#equal data.user.role 'freelancer'}}
				<!-- User Menu -->
				<div class="header-widget">

					<!-- Messages -->
					<div class="header-notifications user-menu">
						<div class="header-notifications-trigger">
							{{#if data.user.profile_picture}}
							<a href="#"><div class="user-avatar status-online"><img src="{{data.user.profile_picture}}" alt=""></div></a>
							{{else}}
							<a href="#"><div class="user-avatar status-online"><img src="/images/user-avatar-placeholder.png" alt=""></div></a>
							{{/if}}
						</div>

						<!-- Dropdown -->
						<div class="header-notifications-dropdown">

							<!-- User Status -->
							<div class="user-status">

								<!-- User Name / Avatar -->
								<div class="user-details">
									{{#if data.user.profile_picture}}
									<div class="user-avatar status-online"><img src="{{data.user.profile_picture}}" alt=""></div>
									{{else}}
									<div class="user-avatar status-online"><img src="/images/user-avatar-placeholder.png" alt=""></div>
									{{/if}}
									<div class="user-name">
										{{data.user.first_name}} {{data.user.last_name}} <span>Freelancer</span>
									</div>
								</div>
								
								<!-- User Status Switcher -->
								<div class="status-switch" id="snackbar-user-status">
									<label class="user-online current-status">Online</label>
									<label class="user-invisible">Invisible</label>
									<!-- Status Indicator -->
									<span class="status-indicator" aria-hidden="true"></span>
								</div>	
							</div>
							
							<ul class="user-menu-small-nav">
								<li><a href="/dashboard"><i class="icon-material-outline-dashboard"></i> داشبورد</a></li>
								<li><a href="/dashboard_settings"><i class="icon-material-outline-settings"></i> تنظیمات</a></li>
								<li><a href="/logout" id="logOut"><i class="icon-material-outline-power-settings-new"></i> خروج</a></li>
							</ul>
						</div>
					</div>
				</div>
				<!-- User Menu / End -->
				{{/equal}}
				{{#equal data.user.role 'employer'}}
				<!-- User Menu -->
				<div class="header-widget">

					<!-- Messages -->
					<div class="header-notifications user-menu">
						<div class="header-notifications-trigger">
							{{#if data.user.logo}}
							<a href="#"><div class="user-avatar status-online"><img src="{{data.user.logo}}" alt=""></div></a>
							{{else}}
							<a href="#"><div class="user-avatar status-online"><img src="/images/user-avatar-placeholder.png" alt=""></div></a>
							{{/if}}
						</div>

						<!-- Dropdown -->
						<div class="header-notifications-dropdown">

							<!-- User Status -->
							<div class="user-status">

								<!-- User Name / Avatar -->
								<div class="user-details">
									{{#if data.user.logo}}
									<div class="user-avatar status-online"><img src="{{data.user.logo}}" alt=""></div>
									{{else}}
									<div class="user-avatar status-online"><img src="/images/user-avatar-placeholder.png" alt=""></div>
									{{/if}}
									<div class="user-name">
										{{data.user.name}} <span>Employer</span>
									</div>
								</div>
								
								<!-- User Status Switcher -->
								<div class="status-switch" id="snackbar-user-status">
									<label class="user-online current-status">Online</label>
									<label class="user-invisible">Invisible</label>
									<!-- Status Indicator -->
									<span class="status-indicator" aria-hidden="true"></span>
								</div>	
							</div>
							
							<ul class="user-menu-small-nav">
								<li><a href="/dashboard"><i class="icon-material-outline-dashboard"></i> داشبورد</a></li>
								<li><a href="/dashboard_settings"><i class="icon-material-outline-settings"></i> تنظیمات/a></li>
								<li><a href="/logout" id="logOut"><i class="icon-material-outline-power-settings-new"></i> خروج</a></li>
							</ul>
						</div>
					</div>
				</div>
				<!-- User Menu / End -->
				{{/equal}}
				{{/if}}
				<!-- Mobile Navigation Button -->
				<span class="mmenu-trigger">
					<button class="hamburger hamburger--collapse" type="button">
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
					</button>
				</span>

			</div>
			<!-- Right Side Content / End -->

		</div>
	</div>
	<!-- Header / End -->

</header>
<div class="clearfix"></div>
<!-- Header Container / End -->



<!-- Titlebar
================================================== -->
<div class="single-page-header" data-background-image="images/single-job.jpg">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="single-page-header-inner">
					<div class="left-side">
						<div class="header-image"><a href="/single-company-profile.html"><img src="{{employer_img}}" alt=""></a></div>
						<div class="header-details">
							<h3>{{job.title}}</h3>
							<h5>درباره کارفرما</h5>
							<ul>
								<li><a href="/{{employer_link}}"><i class="icon-material-outline-business"></i> {{employer_name}}</a></li>
								<li><div class="star-rating" data-rating="4.9"></div></li>
								<li> {{employer_location}}</li>
							</ul>
						</div>
					</div>
					<div class="right-side">
						<div class="salary-box">
							<div class="salary-type">حقوق سالیانه</div>
							<div class="salary-amount">{{job.min_salary}} - {{job.max_salary}}</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<!-- Page Content
================================================== -->
<div class="container">
	<div class="row">
		
		<!-- Content -->
		<div class="col-xl-8 col-lg-8 content-right-offset">

			<div class="single-page-section">
				<h3 class="margin-bottom-25">شرح موقعیت شغلی</h3>
				<p>{{job.description}}</p>
			</div>
			<div class="single-page-section">
				<h3 class="margin-bottom-25">موقعیت‌های شغلی مشابه</h3>

				<!-- Listings Container -->
				<div class="listings-container grid-layout">

					{{#each similarJobs}}
					<!-- Job Listing -->
					<a href="/jobs/{{this._id}}" class="job-listing">

						<!-- Job Listing Details -->
						<div class="job-listing-details">
							<!-- Logo -->
							<div class="job-listing-company-logo">
								{{#if this.posted_by.logo}}
								<img src="{{this.posted_by.logo}}" alt="">
								{{else}}
								<img src="/images/company-logo-05.png" alt="">
								{{/if}}
							</div>

							<!-- Details -->
							<div class="job-listing-description">
								{{#if this.posted_by.name}}
								<h4 class="job-listing-company">{{this.posted_by.name}}</h4>
								{{else}}
								<h4 class="job-listing-company">No Name</h4>
								{{/if}}
								<h3 class="job-listing-title">{{this.title}}</h3>
							</div>
						</div>
						<!-- Job Listing Footer -->
						<div class="job-listing-footer">
							<ul>
								<li><i class="icon-material-outline-location-on"></i> {{this.location}}</li>
								<li><i class="icon-material-outline-business-center"></i> {{this.type}}</li>
								<li><i class="icon-material-outline-account-balance-wallet"></i> {{this.min_salary}}
								-${{this.max_salary}}</li>
								<li><i class="icon-material-outline-access-time"></i>{{this.created_at}}</li>
							</ul>
						</div>
					</a>
					{{/each}}
				</div>
					<!-- Listings Container / End -->

				</div>
		</div>
		

		<!-- Sidebar -->
		<div class="col-xl-4 col-lg-4">
			<div class="sidebar-container">

				{{#equal role 'freelancer'}}
					{{#equal hasApplied 0}}
					<a href="#small-dialog" class="apply-now-button popup-with-zoom-anim">ارسال رزومه <i class="icon-material-outline-arrow-right-alt"></i></a>
					{{/equal}}
				{{/equal}}
				<!-- Sidebar Widget -->
				<div class="sidebar-widget">
					<div class="job-overview">
						<div class="job-overview-headline">خلاصه موقعیت شغلی</div>
						<div class="job-overview-inner">
							<ul>
								<li>
									<i class="icon-material-outline-location-on"></i>
									<span>موقعیت</span>
									<h5>{{job.location}}</h5>
								</li>
								<li>
									<i class="icon-material-outline-business-center"></i>
									<span>نوع همکاری</span>
									<h5>{{job.type}}</h5>
								</li>
								<li>
									<i class="icon-material-outline-local-atm"></i>
									<span>حقوق</span>
									<h5>{{job.min_salary}} - {{job.max_salary}}</h5>
								</li>
								<li>
									<i class="icon-material-outline-access-time"></i>
									<span>تاریخ پست موقعیت </span>
									<h5>{{job.created_at}}</h5>
								</li>
							</ul>
						</div>
					</div>
				</div>

				<!-- Sidebar Widget -->
				<div class="sidebar-widget">
					<h3>اشتراک</h3>

					<!-- Copy URL -->
					<div class="copy-url">
						<input id="copy-url" type="text" value="" class="with-border">
						<button class="copy-url-button ripple-effect" data-clipboard-target="#copy-url" title="Copy to Clipboard" data-tippy-placement="top"><i class="icon-material-outline-file-copy"></i></button>
					</div>

					<!-- Share Buttons -->
					<div class="share-buttons margin-top-25">
						<div class="share-buttons-trigger"><i class="icon-feather-share-2"></i></div>
						<div class="share-buttons-content">
							{{!-- <span>Interesting? <strong>Share It!</strong></span> --}}
							<ul class="share-buttons-icons">
								<li><a href="#" data-button-color="#3b5998" title="Share on Facebook" data-tippy-placement="top"><i class="icon-brand-facebook-f"></i></a></li>
								<li><a href="#" data-button-color="#1da1f2" title="Share on Twitter" data-tippy-placement="top"><i class="icon-brand-twitter"></i></a></li>
								<li><a href="#" data-button-color="#dd4b39" title="Share on Google Plus" data-tippy-placement="top"><i class="icon-brand-google-plus-g"></i></a></li>
								<li><a href="#" data-button-color="#0077b5" title="Share on LinkedIn" data-tippy-placement="top"><i class="icon-brand-linkedin-in"></i></a></li>
							</ul>
						</div>
					</div>
				</div>

			</div>
		</div>

	</div>
</div>


