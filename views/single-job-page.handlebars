<!-- Snackbar // documentation: https://www.polonel.com/snackbar/ -->
<script>
// Snackbar for user status switcher
$('#snackbar-user-status label').click(function() { 
	Snackbar.show({
		text: 'Your status has been changed!',
		pos: 'bottom-center',
		showAction: false,
		actionText: "Dismiss",
		duration: 3000,
		textColor: '#fff',
		backgroundColor: '#383838'
	}); 
}); 

// Snackbar for copy to clipboard button
$('.copy-url-button').click(function() { 
	Snackbar.show({
		text: 'Copied to clipboard!',
	}); 
}); 
</script>

<script>
	$('#submit-apply').on('click', () => {
		const data = new FormData($('#apply-now-form')[0]);
		console.log($('#upload-cv')[0].files[0]);
		data.append('file', $('#upload-cv')[0].files[0]);
		$.ajax({
			url: '/jobs/apply',
			data,
			cache: false,
			processData: false,
			contentType: false,
		});
	});

	$('#logOut').on('click', () => {
		$.ajax({
			url: '/logout',
			method: 'GET',
			success: (data, status, xhr) => {
				window.location.href = '/';
			}
		});
	});
</script>

</body>
</html>