<!-- Snackbar // documentation: https://www.polonel.com/snackbar/ -->
<script>
// Snackbar for user status switcher
$('#snackbar-user-status label').click(function() { 
	Snackbar.show({
		text: 'Your status has been changed!',
		pos: 'bottom-center',
		showAction: false,
		actionText: "Dismiss",
		duration: 3000,
		textColor: '#fff',
		backgroundColor: '#383838'
	}); 
}); 

// Snackbar for copy to clipboard button
$('.copy-url-button').click(function() { 
	Snackbar.show({
		text: 'Copied to clipboard!',
	}); 
}); 
</script>

<script>
	$('#snackbar-place-bid').on('click', () => {
		let minimal_rate = $('#biddingVal').text();
        minimal_rate = minimal_rate.replaceAll(',', '');
		const delivery_time = $('#delivery-time').val();
		const type = $('#type option:selected').val();
		$.ajax({
			'url': '/tasks/bids',
			method: 'POST',
			contentType: 'application/json',
			data: JSON.stringify({
				minimal_rate,
				delivery_time,
				type,
				task_id: window.location.href.split('tasks/')[1],
			}),
			error: (xhr, status, err) => { 
				Snackbar.show({
					text: 'امکان دادن پیشنهاد برای شما وجود ندارد!',
				}); 
			},
			success: (data, status, xhr) => {
				Snackbar.show({
					text: 'پیشنهاد شما ثبت شد!',
				});
			},
		});
	});

	$('#logOut').on('click', () => {
		$.ajax({
			url: '/logout',
			method: 'GET',
			success: (data, status, xhr) => {
				window.location.href = '/';
			}
		});
	});
</script>

