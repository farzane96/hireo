				</div>
				<ul class="boxed-list-ul">
					{{#each data.bids}}
					<li>
						<div class="bid">
							<!-- Avatar -->
							<div class="bids-avatar">
								<div class="freelancer-avatar">
									<a href="/freelancers/{{this.freelancer_id._id}}"><img src="{{this.freelancer_id.profile_picture}}" alt=""></a>
								</div>
							</div>
							
							<!-- Content -->
							<div class="bids-content">
								<!-- Name -->
								<div class="freelancer-name" style="padding-right: 20px;">
									<h4><a href="/freelancers/{{this.freelancer_id._id}}">{{this.freelancer_id.first_name}} 
									{{this.freelancer_id.last_name}}</a></h4>
									<div class="star-rating" data-rating="{{this.freelancer_id.rate}}"></div>
								</div>
							</div>
							
							<!-- Bid -->
							<div class="bids-bid">
								<div class="bid-rate">
									<div class="rate">{{this.minimal_rate}}</div>
									<span> {{this.delivery_time.quantity}} {{this.delivery_time.type}}</span>
								</div>
							</div>
						</div>
					</li>
					{{/each}}
				</ul>
			</div>

		</div>
		

		<!-- Sidebar -->
		<div class="col-xl-4 col-lg-4">
			<div class="sidebar-container">

				<div class="countdown green margin-bottom-35">تاریخ پست‌ : {{data.task.created_at}}</div>

				<div class="sidebar-widget">
					<div class="bidding-widget">
						<div class="bidding-headline"><h3>پیشنهاد دادن برای کار</h3></div>
						<div class="bidding-inner">

							<!-- Headline -->
							<span class="bidding-detail">حداقل نرخ خود را وارد کنید</span>

							<!-- Price Slider -->
							<div class="bidding-value">تومان<span id="biddingVal"></span></div>
							<input class="bidding-slider" type="text" value="" id="minimal-rate" data-slider-handle="custom" data-slider-currency="T" data-slider-min="{{data.task.min_budget}}" data-slider-max="{{data.task.max_budget}}" data-slider-value="auto" data-slider-step="10" data-slider-tooltip="hide" />
							
							<!-- Headline -->
							<span class="bidding-detail margin-top-30">زمان تحویل پروژه‌ را وارد کنید</span>

							<!-- Fields -->
							<div class="bidding-fields">
								<div class="bidding-field">
									<!-- Quantity Buttons -->
									<div class="qtyButtons">
										<div class="qtyInc"></div>
										<input type="text" name="qtyInput" value="1" id="delivery-time">
										<div class="qtyDec"></div>
									</div>
								</div>
								<div class="bidding-field">
									<select class="selectpicker default" id="type">
										<option selected value="1">روز</option>
										<option value="2">ساعت</option>
									</select>
								</div>
							</div>

							<!-- Button -->
							<button id="snackbar-place-bid" class="button ripple-effect move-on-hover full-width margin-top-30"><span>وارد کردن پیشنهاد</span></button>

						</div>
						<div class="bidding-signup">هنوز ثبت‌‌‌‌‌ نام نکرده‌اید؟ <a href="/" class="register-tab sign-in popup-with-zoom-anim">ثبت‌‌‌‌‌ نام</a></div>
					</div>
				</div>

				<!-- Sidebar Widget -->
				<div class="sidebar-widget">
					<h3>اشتراک</h3>
					
					<!-- Copy URL -->
					<div class="copy-url">
						<input id="copy-url" type="text" value="" class="with-border" dir="ltr">
						<button class="copy-url-button ripple-effect" data-clipboard-target="#copy-url" title="Copy to Clipboard" data-tippy-placement="top"><i class="icon-material-outline-file-copy"></i></button>
					</div>

					<!-- Share Buttons -->
					<div class="share-buttons margin-top-25">
						<div class="share-buttons-trigger"><i class="icon-feather-share-2"></i></div>
						<div class="share-buttons-content">
							{{!-- <span>Interesting? <strong>Share It!</strong></span> --}}
							<ul class="share-buttons-icons">
								<li><a href="#" data-button-color="#3b5998" title="Share on Facebook" data-tippy-placement="top"><i class="icon-brand-facebook-f"></i></a></li>
								<li><a href="#" data-button-color="#1da1f2" title="Share on Twitter" data-tippy-placement="top"><i class="icon-brand-twitter"></i></a></li>
								<li><a href="#" data-button-color="#dd4b39" title="Share on Google Plus" data-tippy-placement="top"><i class="icon-brand-google-plus-g"></i></a></li>
								<li><a href="#" data-button-color="#0077b5" title="Share on LinkedIn" data-tippy-placement="top"><i class="icon-brand-linkedin-in"></i></a></li>
							</ul>
						</div>
					</div>
				</div>

			</div>
		</div>

	</div>
</div>


